{{!
    @template mod_supervideo/mobile

    Example context (json):
    {
        "cmid": 123,
        "iframe-url": "https://example.com/video.mp4"
    }
}}

<iframe id="iframe-{{{cmid}}}"
        src="{{{iframe-url}}}" style="height: 100vw; width: 100%;"
        webkitallowfullscreen mozallowfullscreen allowfullscreen
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        sandbox="allow-scripts allow-forms allow-same-origin allow-modals"></iframe>
